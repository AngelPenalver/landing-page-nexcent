---
import { Image } from "astro:assets";
const { numbers, name, image } = Astro.props;
---

<div class="card">
  <div class="card-img">
    <Image src={image} alt={name} />
  </div>
  <div class="card-text">
    <h5>{numbers}</h5>
    <p>{name}</p>
  </div>
</div>
<style>
  .card{
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .card-text{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.1rem;
  }
  .card-text h5 {
    font-size: clamp(1.4rem, 3vw, 1.75rem);
    font-style: normal;
    font-weight: 700;
    line-height: 36px;
    color: var(--Color-Neutral-D_Grey);
    margin: 0;
  }

  .card-text p {
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    color: var(--Color-Neutral-Grey);
    margin: 0;
  }
</style>
