---
import NavBar from "./NavBar.astro";
import { Image } from "astro:assets";
import Background_IMG from "../assets/Background_Home.svg";
---

<section class="home-contain">
  <NavBar />
  <div class="home-content">
    <div class="home-text">
      <div id="title">
        <h1>Lessons and insights</h1>
        <span id="subtitle-text">from 8 years</span>
      </div>
      <p>
        Where to grow your business as a photographer: site or social media?
      </p>
      <div id="img-responsive">
        <Image src={Background_IMG} alt="Ilustration" />
      </div>
      <button>Register</button>
    </div>
    <div class="home-img">
      <Image src={Background_IMG} alt="Ilustration" />
    </div>
  </div>
</section>

<style>
  .home-contain {
    display: flex;
    flex-direction: column;
  }
  .home-content {
    display: flex;
    flex-direction: column;
    padding: 2rem 0;
    height: 100%;
    background: var(--Color-Neutral-Silver);
  }
  .home-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    padding: 0 2rem;
  }
  .home-img {
    display: none;
  }
  #title {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 0;
    gap: 0;
    width: 100%;
  }
  #title h1 {
    font-size: clamp(1.6rem, 7vw, 3.2rem);
    font-style: normal;
    font-weight: 600;
    color: var(--Color-Neutral-D_Grey);
    margin: 0;
    padding: 0;
  }
  #subtitle-text {
    color: var(--Color-Brand-Primary, #4caf4f);
    font-size: clamp(1.6rem, 7vw, 3.2rem);
    font-style: normal;
    font-weight: 600;
    margin: 0;
    padding: 0;
  }
  .home-content button {
    display: flex;
    padding: 14px 32px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border: none;
    border-radius: 4px;
    background-color: var(--Color-Brand-Primary);
    color: var(--Color-Neutral-White);
    font-size: clamp(0.8rem, 3vw, 1rem);
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
    letter-spacing: 0.2px;
    margin-top: 1rem;
  }
  .home-content p {
    color: var(--Neutral-Grey, #717171);
    font-size: clamp(0.9rem, 3vw, 1rem);
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    margin: 0;
    padding: 0;
  }

  #img-responsive img {
    width: 300px;
  }

  @media (min-width: 768px) {
    .home-contain {
      height: 100vh;
    }
    .home-content {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-evenly;
      padding: 4rem 0;
    }
    .home-img {
      display: block;
    }
    .home-text {
      /* gap:20px; */
      width: 46%;
      align-items: flex-start;
    }
    #img-responsive {
      display: none;
    }
    #subtitle-text {
      margin: -15px 0 0 0;
    }
  }
</style>
